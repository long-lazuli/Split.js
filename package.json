{
  "name": "ui-splitter",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/ui-splitter.umd.js",
  "minified:main": "dist/ui-splitter.min.js",
  "module": "dist/ui-splitter.es5.js",
  "typings": "dist/types/ui-splitter.d.ts",
  "test:es5": "spec/ui-splitter/ui-splitter.test.es5.js",
  "files": [
    "dist"
  ],
  "author": "Long Lazuli <long.lazuli@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/long-lazuli/ui-splitter"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && npm run minify && npm run build:doc",
    "build:doc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "minify": "npm run minify:uglify && npm run minify:checkSize",
    "minify:uglify": "uglifyjs dist/ui-splitter.umd.js -c -o dist/ui-splitter.min.js",
    "minify:checkSize": "echo \"gzip size: $(gzip-size $npm_package_minified_main)\"",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:browsers": "npm run build && jasmine",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test:browsers && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/node": "^9.3.0",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "gzip-size-cli": "^2.1.0",
    "husky": "^0.14.0",
    "jasmine": "^3.1.0",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.57.0",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^15.0.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.3.17",
    "validate-commit-msg": "^2.12.2"
  }
}
